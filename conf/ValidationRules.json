{
    "rulesOfValidation": {

        "Can'tBeEmpty": {
            "rule": "^(?=\\s*\\S).*$",
            "message": "can't be empty",
            "specTrue": "NotEmpty",
            "specFalse": ""
        },

        "Can'tHaveWhiteSpaces": {
            "rule": "^[\\S]*$",
            "message": "can't have whitespaces",
            "specTrue": "NotWhiteSpaces",
            "specFalse": "With withespaces"
        },

        "MustBeNumeric": {
            "rule": "^\\d+\\.?\\d{0,2}$",
            "message": "must be a number",
            "specTrue": "36",
            "specFalse": "Numero"
        },

        "MustBeBoolean": {

            "rule": "(true)|(false)",
            "message": "must be true or false",
            "specTrue": "true",
            "specFalse": "falxe"
        },

        "MustBeIP": {

            "rule": "\\b(?:\\d{1,3}\\.){3}\\d{1,3}\\b",
            "message": "must be valid",
            "specTrue": "91.126.140.51",
            "specFalse": "3d25.12.45.20"
        },

        "MustBeResolution": {
            "rule": "([0-9].*)x([1-8][0-9][0-9])",
            "message": " must be numberxnumber",
            "specTrue": "1900x1200",
            "specFalse": "120"
        },

        "MustBeMilliseconds": {
            "rule": "^(0|[1-9][0-9]*)$",
            "message": "must be in miliseconds",
            "specTrue": "36",
            "specFalse": "Numero"
        },

        "MustBeURL": {
            "rule": "^(http(?:s)?\\:\\/\\/[a-zA-Z0-9\\-]+(?:\\.[a-zA-Z0-9\\-]+)*\\.[a-zA-Z]{2,6}(?:\\/?|(?:\\/[\\w\\-]+)*)(?:\\/?|\\/\\w+\\.[a-zA-Z]{2,4}(?:\\?[\\w]+\\=[\\w\\-]+)?)?(?:\\&[\\w]+\\=[\\w\\-]+)*)$",
            "message": "must have the format http://www.name.com",
            "specTrue": "http://www.google",
            "specFalse": " "
        },

        "EmptyOrURL": {
            "rule": "^$|^(http(?:s)?\\:\\/\\/[a-zA-Z0-9\\-]+(?:\\.[a-zA-Z0-9\\-]+)*\\.[a-zA-Z]{2,6}(?:\\/?|(?:\\/[\\w\\-]+)*)(?:\\/?|\\/\\w+\\.[a-zA-Z]{2,4}(?:\\?[\\w]+\\=[\\w\\-]+)?)?(?:\\&[\\w]+\\=[\\w\\-]+)*)$",
            "message": "must be empty or have the format http://www.name.com",
            "specTrue": "http://www.google",
            "specFalse": " "
        },


        "MustBeEmail": {
            "rule": "(?:[a-z0-9!#$%&'*+/=?^_`{|}~-]+(?:\\.[a-z0-9!#$%&'*+/=?^_`{|}~-]+)*|\"(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21\\x23-\\x5b\\x5d-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])*\")@(?:(?:[a-z0-9](?:[a-z0-9-]*[a-z0-9])?\\.)+[a-z0-9](?:[a-z0-9-]*[a-z0-9])?|\\[(?:(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?)\\.){3}(?:25[0-5]|2[0-4][0-9]|[01]?[0-9][0-9]?|[a-z0-9-]*[a-z0-9]:(?:[\\x01-\\x08\\x0b\\x0c\\x0e-\\x1f\\x21-\\x5a\\x53-\\x7f]|\\\\[\\x01-\\x09\\x0b\\x0c\\x0e-\\x7f])+)\\])",
            "message": "must be a valid email",
            "specTrue": "ludobermejo@gmail.com",
            "specFalse": "photo"

        }
    },

    "actions": {

        "users-add": {
            "name": {
                "rulesOfValidation": ["Can'tBeEmpty"]
            },
            "email": {
                "rulesOfValidation": ["MustBeEmail"]
            },
            "password": {
                "rulesOfValidation": ["Can'tBeEmpty"]
            }
        }

    }

}